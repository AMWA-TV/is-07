{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Describes an event with Number payload",
  "title": "Number event",
  "allOf": [
    { "$ref": "event_core.json" },
    {
      "type": "object",
      "required": [
        "event_type",
        "payload"
      ],
      "properties": {
        "event_type": {
          "description": "Event type",
          "type": "string",
          "pattern": "^number(?:\\/[a-zA-Z_\\-])*$"
        },
        "payload": {
          "description": "Number payload",
          "type": "object",
          "required": [
            "value"
          ],
          "properties": {
            "value": {
              "description": "Number value",
              "type": "number"
            },
            "scale": {
              "description": "Denominator for rational number representation",
              "type": "integer"
            }
          }
        }
      }
    }
  ]
}
